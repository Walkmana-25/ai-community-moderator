{
  "name": "ai-community-moderator",
  "version": "1.0.0",
  "description": "AI-powered community moderator GitHub Action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/main.js -o dist --source-map --license licenses.txt",
    "package": "ncc build lib/main.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix && prettier --write **/*",
    "all": "npm run lint && npm run build && npm run package && npm test"
  },
  "keywords": [
    "github-actions",
    "moderation",
    "ai",
    "community"
  ],
  "author": "Ben Balter",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.29.0",
    "jest": "^30.0.2",
    "prettier": "^3.6.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@octokit/rest": "^22.0.0",
    "openai": "^5.6.0"
  }
}
